{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "worldbeyond:capybara",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "wormwood:capybara.baby": {
                "minecraft:is_baby": {},
                "minecraft:scale": {
                    "value": 0.5
                },
                "minecraft:ageable": {
                    "duration": 1200,
                    "feed_items": "wheat",
                    "grow_up": {
                        "event": "minecraft:ageable_grow_up",
                        "target": "self"
                    }
                },
                "minecraft:behavior.follow_parent": {
                    "priority": 6,
                    "speed_multiplier": 1.1
                }
            },
            "wormwood:capybara.adult": {
                "minecraft:experience_reward": {
                    "on_bred": "Math.Random(1,7)",
                    "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
                },
                "minecraft:behavior.breed": {
                    "priority": 3,
                    "speed_multiplier": 1.0
                },
                "minecraft:breedable": {
                    "require_tame": false,
                    "breeds_with": {
                        "mate_type": "worldbeyond:capybara",
                        "baby_type": "worldbeyond:capybara"
                    },
                    "breed_items": "tallgrass"
                }
            }
        },
        "components": {
            // General Attribute Components
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:can_climb": {},
            "minecraft:physics": {},
            "minecraft:nameable": {},
            "minecraft:pushable": {},
            "minecraft:type_family": {
                "family": [
                    "capybara",
                    "mob"
                ]
            },
            "minecraft:health": {
                "value": 12,
                "max": 12
            },
            "minecraft:collision_box": {
                "width": 0.9,
                "height": 1.2
            },
            "minecraft:breathable": {
                "total_supply": 15,
                "suffocate_time": 0
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "operator": "==",
                            "value": true
                        },
                        "cause": "lava",
                        "damage_per_tick": 4
                    }
                ]
            },
            "minecraft:movement": {
                "value": 0.25
            },
            "minecraft:balloonable": {
                "mass": 0.75
            },
            "minecraft:leashable": {
                "soft_distance": 4.0,
                "hard_distance": 6.0,
                "max_distance": 10.0
            },
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
            
            // Navigational Components
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "can_path_over_water": true,
                "avoid_water": true
            },
            // Behavioural Components
            "minecraft:behavior.float": {
                "priority": 0
            },
            "minecraft:behavior.panic": {
                "priority": 1,
                "speed_multiplier": 1.25
            },
            "minecraft:behavior.mount_pathing": {
                "priority": 2,
                "speed_multiplier": 1.5,
                "target_dist": 0.0,
                "track_target": true
            },
            "minecraft:behavior.tempt": {
                "priority": 4,
                "speed_multiplier": 1.25,
                "items": [
                    "wheat"
                ]
            },
            "minecraft:behavior.follow_parent": {
                "priority": 5,
                "speed_multiplier": 1.1
            },
            "minecraft:behavior.eat_block": {
                "priority": 6,
                "success_chance": "query.is_baby ? 0.02 : 0.001",
                "time_until_eat": 1.8,
                "eat_and_replace_block_pairs": [
                    {
                        "eat_block": "seagrass",
                        "replace_block": "water"
                    },
                    {
                        "eat_block": "tallgrass",
                        "replace_block": "air"
                    }
                ],
                "on_eat": {
                    "event": "minecraft:on_eat_block",
                    "target": "self"
                }
            },
            "minecraft:behavior.random_stroll": {
                "priority": 7,
                "speed_multiplier": 0.8
            },
            "minecraft:behavior.look_at_player": {
                "priority": 8,
                "look_distance": 6.0,
                "probability": 0.02
            },
            "minecraft:behavior.random_look_around": {
                "priority": 9
            }
        },
        "events": {
            // Vanilla Events //
            "minecraft:entity_spawned": {
                "sequence": [
                    {
                        "randomize": [
                            {
                                "weight": 7,
                                "trigger": "capybara:spawn_adult"
                            },
                            {
                                "weight": 3,
                                "trigger": "capybara:spawn_baby"
                            }
                        ]
                    }
                ]
            },
            "minecraft:entity_born": {
                "add": {
                    "component_groups": [
                        "minecraft:sheep_baby"
                    ]
                }
            },
            "minecraft:ageable_grow_up": {
                "remove": {
                    "component_groups": [
                        "minecraft:sheep_baby"
                    ]
                },
                "add": {
                    "component_groups": [
                        "minecraft:sheep_adult",
                        "minecraft:rideable_wooly",
                        "minecraft:loot_wooly"
                    ]
                }
            },
            "minecraft:on_eat_block": {
                "sequence": []
            },
            // Specific Events //
            "capybara:spawn_adult": {
                "add": {
                    "component_groups": [
                        "wormwood:capybara.adult"
                    ]
                }
            },
            "capybara:spawn_baby": {
                "add": {
                    "component_groups": [
                        "wormwood:capybara.baby"
                    ]
                }
            }
        }
    }
}